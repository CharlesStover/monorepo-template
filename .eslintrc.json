{
  "plugins": ["prettier"],

  "env": {
    "node": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],

  "parserOptions": {
    "extraFileExtensions": [".cjs", ".json", ".mjs"],
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },

  "rules": {
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ]
  }
}
