{
  "cacheDirectory": "./jest/cache",
  "collectCoverage": true,
  "coverageDirectory": "./jest/coverage",
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "resetMocks": true,
  "resetModules": true,
  "restoreMocks": true,
  "roots": ["<rootDir>/src"],
  "testEnvironment": "jsdom",
  "collectCoverageFrom": [
    "<rootDir>/src/**/*.{cjs,jsx,jsx,mjs,ts,tsx}",
    "!<rootDir>/src/**/*.d.ts",
    "!<rootDir>/src/**/*.e2e.ts"
  ],
  "moduleNameMapper": {
    "^.+\\.module\\.(?:css|sass|scss)$": "identity-obj-proxy",
    "\\.(?:gif|jpg|png)$": "@monorepo-template/jest-preset/src/empty-string.ts"
  },
  "transform": {
    "^.+\\.tsx?$": "@monorepo-template/jest-transformer"
  }
}
