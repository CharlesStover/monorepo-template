{
  "extends": "../../tsconfig.json",
  "include": [".eslintrc.cjs", "**/*"],

  "compilerOptions": {
    "jsx": "react-jsx",
    "sourceMap": true,
    "target": "ES5",
    "types": ["jest", "../../types"]
