{
  "all": true,
  "cache": true,
  "check-coverage": false,
  "extension": [".js", ".jsx", ".ts", ".tsx"],
  "include": "src/**",
  "report-dir": "cypress/coverage",
  "reporter": ["clover", "json", "lcov", "text"],
  "skip-empty": true,
  "skip-full": false,
  "exclude": [
    "src/**/*.d.ts",
    "src/**/*.e2e.ts",
    "src/**/*.stories.{ts,tsx}",
    "src/**/*.test.{ts,tsx}",
    "src/test-utils/**"
  ]
}
